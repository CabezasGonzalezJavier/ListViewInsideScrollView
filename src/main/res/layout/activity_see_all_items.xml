<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_detail_ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        style="@style/AppTheme.Relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/activity_see_all_items_relative_layout"
            style="@style/AppTheme.Relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/activity_see_all_items_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="TODO"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/activity_see_all_items_firstLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_see_all_items_icon"
                android:text="@string/activity_see_all_items_the_developer_world_is_yours"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/activity_see_all_items_secondLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_see_all_items_firstLine"
                android:text="@string/activity_see_all_items_the_developer_world_is_yours"
                android:textSize="18sp" />

        </RelativeLayout>

        <com.thedeveloperworldisyours.listviewinsidescrollview.view.NonScrollListView
            android:id="@+id/activity_see_all_items_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/activity_see_all_items_relative_layout"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/activity_see_all_items_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/activity_see_all_items_listView"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/activity_see_all_items_example"
            android:textSize="18sp" />
    </RelativeLayout>
</ScrollView>